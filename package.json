{
  "name": "@rogal/hooks",
  "version": "1.0.0-beta.6",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "rollup -c rollup.config.ts",
    "build": "rm -rf dist && rollup -c rollup.config.ts",
    "watch": "rollup -c rollup.config.ts -w",
    "lint:js": "front-linter js  -- --presets=javascript,react",
    "lint:ts": "front-linter js  -- --presets=typescript,react",
    "lint": "npm run lint:js && npm run lint:ts",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watchAll --coverage",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "keywords": [],
  "author": "Gabriel GarcÃ­a Seco",
  "license": "MIT",
  "peerDependencies": {
    "react": ">= 16.14.0",
    "react-dom": ">= 16.14.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@rogal/front-linter": "3.0.0-beta.10",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "11.2.7",
    "@types/jest": "30.0.0",
    "@types/node": "14.18.63",
    "@types/react": "17.0.87",
    "babel-loader": "8.4.1",
    "coveralls": "3.1.1",
    "eslint-import-resolver-typescript": "2.7.1",
    "husky": "4.3.8",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.1.3",
    "lint-staged": "10.5.4",
    "react": "17.0.2",
    "react-docgen-typescript-loader": "3.7.2",
    "react-dom": "17.0.2",
    "rollup": "2.79.2",
    "rollup-plugin-typescript2": "0.36.0",
    "serve": "14.2.4",
    "shipjs": "0.27.0",
    "ts-jest": "29.4.1",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@rogal/front-linter/typescript-react-eslint.js"
    ]
  },
  "stylelint": {
    "extends": [
      "./node_modules/@rogal/front-linter/.stylelintrc.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js -- --fix --staged"
    ],
    "*.{tsx,ts}": [
      "npm run lint:ts -- --fix --staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && lint-staged"
    }
  }
